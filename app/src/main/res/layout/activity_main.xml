<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:background="#f6cf4c"
        android:paddingTop="5dp"
        android:text="uci dining"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"

        android:orientation="horizontal"
        android:background="#ffffff">

        <Button
            android:id="@+id/dining_halls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1.0"
            android:background="@color/bg_screen1"
            android:text="UCI Dining Halls"
            android:drawableTop="@drawable/hamburger"
            android:paddingTop="100dp"
            android:paddingBottom="100dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cafes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1.0"
            android:background="@color/bg_screen2"
            android:text="CafÃ©s"
            android:drawableTop="@drawable/cafe2"
            android:paddingTop="100dp"
            android:paddingBottom="100dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:background="#ffffff">

        <Button
            android:id="@+id/restaurants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1.0"
            android:background="@color/bg_screen3"
            android:text="Restaurants"
            android:paddingTop="100dp"
            android:paddingBottom="100dp"
            android:drawableTop="@drawable/restaurant"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/convenience_stores"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1.0"
            android:background="@color/bg_screen4"
            android:text="Convenience Stores"
            android:drawableTop="@drawable/store"
            android:paddingTop="100dp"
            android:paddingBottom="100dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>